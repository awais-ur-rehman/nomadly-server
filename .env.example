# Application Environment
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/nomadly?retryWrites=true&w=majority
# For local MongoDB: mongodb://localhost:27017/nomadly

# JWT Authentication
# Generate secrets with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here
REFRESH_TOKEN_EXPIRES_IN=30d

# File Storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Service (Gmail SMTP with Nodemailer)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
# Note: For Gmail, you need to use an App Password, not your regular password
# Generate one at: https://myaccount.google.com/apppasswords

# RevenueCat Integration
REVENUECAT_API_KEY=your_revenuecat_api_key
REVENUECAT_WEBHOOK_SECRET=your_revenuecat_webhook_secret

# Redis (Optional - for rate limiting with Redis store)
# If not provided, rate limiting will use in-memory store
REDIS_URL=redis://localhost:6379

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:5174

# Logging
LOG_LEVEL=debug
# Options: trace, debug, info, warn, error, fatal
